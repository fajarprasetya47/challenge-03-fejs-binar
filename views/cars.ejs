<%- include("partials/head")  %> 
<%- include("partials/cmsView")  %>

<% if (messageAlert) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= messageAlert %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div> 
<% } %>

<div class="mb-2 d-flex flex-wrap">
  <div class="mb-1" style="flex-basis: 30%;">
    <h3>List Car</h3>
  </div>
  <div style="text-align: right; flex-basis: 70%;">
    <a href="/cars/add-car" class="btn btn-primary">
      <img src="../public/img/fi_plus.svg" alt="">
      Add New Car
    </a>
  </div>
</div>

<div class="d-flex mb-4 flex-wrap">
  <button class="btn btn-category-car-active me-3 my-2">All</button>
  <button class="btn btn-category-car me-3 my-2">Small</button>
  <button class="btn btn-category-car me-3 my-2">Medium</button>
  <button class="btn btn-category-car me-3 my-2">Large</button>
</div>

<div class="list-car-container">
  <% cars.forEach(car => { %>
    <div class="card mb-3 me-3" style="width: 18rem;">
      <div class="card-body">
        <div class="card-img">
          <img src=" <%= car.img %> " alt="car" style="width: 100%;">
        </div>
        <p class="card-text" id="namaTipeMobil"><%= car.name %>/<%= car.category?car.category:"Car" %> </p>
        <p class="card-text fw-bold" id="hargaMobil"><%= car.price %>/hari</p>
        <p class="card-text text-muted" id="startFinishRent">
          <img src="../public/img/fi_key.svg" alt="">
          <%= car.startRent %> - <%= car.finishRent %> 
        </p>
        <p class="card-text text-muted" id="updated">
          <img src="../public/img/fi_clock.svg" alt="">
          Updated at <%= car.updated %> 
        </p>
        <div class="card-list-button">
          <a href="#" class="btn btn-outline-danger px-4"><img src="../public/img/fi_trash-2.svg" alt=""> Delete</a>
          <a href="#" class="btn btn-success px-4"><img src="../public/img/fi_edit.svg" alt=""> Edit</a>
        </div>
      </div>
    </div>
   
  <% }) %>

</div>

<%- include("partials/cmsFooter")  %> 
<%- include("partials/footer")  %> 